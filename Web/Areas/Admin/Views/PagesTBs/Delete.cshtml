@model DomainClass.PagesTB

@{
    ViewData["Title"] = "Delete";
}



<h3>ایا از حذف خبر @Model.Title مطمین هستید؟ </h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <hr />

        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <hr />

        <dt>
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd>
            <img class="thumbnail" style="max-width:250px" src="~/img/@Model.ImageName" />
        </dd>
        <hr />

        <dt>
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd>
            @Utilitis.DateConvertor.DateConvertor.ToShamsi(Model.CreateDate)
        </dd>
        <hr />

        <dt>
           <i class="fa fa-eye"></i>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Visist)
        </dd>
        <dt>
           <i class="fa fa-heart"></i>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Like)
        </dd>
        <hr />

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PageID" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت به لیست</a>
    </form>
</div>
